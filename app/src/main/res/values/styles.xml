<resources>

    <style name="HornsApp.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HornsApp.TextView.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HornsApp.TextView.SubTitle" parent="HornsApp.TextView.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HornsApp.TextView.Filter" parent="HornsApp.TextView.Title">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HornsApp.Splash" parent="HornsApp.AppTheme">
        <item name="android:windowBackground">@drawable/layer_list_splash</item>
    </style>

</resources>
