<resources>

    <style name="HornsApp.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/secondaryText</item>

        <item name="bottomSheetDialogTheme">@style/HornsApp.BottomSheetDialogTheme</item>
    </style>

    <style name="HornsApp.TextView.Subtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HornsApp.TextView.Title" parent="HornsApp.TextView.Subtitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HornsApp.TextView.ActivityTitle" parent="HornsApp.TextView.Title">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="HornsApp.Splash" parent="HornsApp.AppTheme">
        <item name="android:windowBackground">@drawable/layer_list_splash</item>
    </style>

    <style name="HornsApp.BottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HornsApp.ModalStyle</item>
    </style>

    <style name="HornsApp.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rectangle_rounded_16dp_top</item>
    </style>
</resources>
