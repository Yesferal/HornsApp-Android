<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Why 600dp ?
    Since the line is first drawn horizontally and then rotated,
    we need enough space horizontally to draw it.
    Using -600dp on both sides, you can draw 1200dp horizontally and then it will be rotated.
    In my case 1200dp is more then enough -->
    <item
        android:left="-600dp"
        android:right="-600dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:drawable="@drawable/shape_horizontal_dashed_line"/>
    </item>
</layer-list>