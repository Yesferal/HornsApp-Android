<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/medium_margin"
    android:paddingStart="@dimen/big_margin"
    android:paddingEnd="@dimen/big_margin"
    android:paddingBottom="@dimen/medium_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/concertImageView"
        android:contentDescription="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:elevation="2dp"
        android:padding="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="0.65:1"
        app:layout_constraintWidth_percent="0.25"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/concertImageView"
        app:layout_constraintBottom_toBottomOf="@+id/concertImageView"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        style="@style/HornsApp.TextView.ViewHolderTitle"
        app:layout_constraintStart_toEndOf="@id/concertImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dividerView"/>

    <com.yesferal.hornsapp.app.util.ImageTextView
        android:id="@+id/timeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dividerView"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintEnd_toEndOf="@+id/titleTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>