<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.concert.ConcertsFragment">

    <ImageView
        android:id="@+id/concertImageView"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/allFilterTextView"
        app:layout_constraintHeight_percent="0.4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_gradient_top"
        app:layout_constraintTop_toTopOf="@+id/concertImageView"
        app:layout_constraintHeight_percent="0.5"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_gradient_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_rectangle_gradient_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/concertImageView"
        app:layout_constraintHeight_percent="0.5"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/concerts"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        style="@style/HornsApp.TextView.Title"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_menu"
        android:tint="@color/primaryText"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextView" />

    <ImageView
        android:id="@+id/locationImageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_map"
        android:tint="@color/secondaryText"
        app:layout_constraintTop_toTopOf="@+id/locationTextView"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintBottom_toBottomOf="@+id/locationTextView"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lima"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintStart_toEndOf="@+id/locationImageView"/>

    <TextView
        android:id="@+id/allFilterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all"
        android:padding="16dp"
        android:layout_marginStart="8dp"
        style="@style/HornsApp.TextView.Filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTextView"/>

    <TextView
        android:id="@+id/virtualFilterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virtual"
        android:padding="16dp"
        style="@style/HornsApp.TextView.Filter"
        app:layout_constraintTop_toTopOf="@+id/allFilterTextView"
        app:layout_constraintStart_toEndOf="@+id/allFilterTextView"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/concertsViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toTopOf="@+id/tabLayout"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="16dp"
        android:background="@color/disable"
        app:tabIndicatorHeight="6dp"
        app:tabIndicatorColor="@color/accent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/adContainerLayout" />

    <FrameLayout
        android:id="@+id/adContainerLayout"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>